
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Only authenticated users can access the storage
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Profile pictures can be read by anyone, but only written by the owner
    match /profilePictures/{userId}/{fileName} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // KYC documents are private and can only be accessed by the owner or an admin
    // This assumes you have custom claims for roles
    match /kycDocs/{userId}/{documentId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || request.auth.token.role == 'admin' || request.auth.token.role == 'super_admin');
    }
  }
}
