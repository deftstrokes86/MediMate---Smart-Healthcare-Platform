
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile pictures are public, but only the user can write to their own path.
    match /profilePictures/{userId} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // KYC documents are private and can only be written by the user.
    // Reading should be done via signed URLs generated by a Cloud Function.
    match /kycDocs/{userId}/{documentId} {
      allow read: if false; // Disallow direct reads.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Consultation media (e.g. images, recordings)
    match /consultations/{consultationId}/{mediaId} {
      // Allow read/write only if the user is part of the consultation.
      // This requires consultation data to be in Firestore.
      allow read, write: if request.auth != null && 
                          resource.metadata.patientId == request.auth.uid || 
                          resource.metadata.providerId == request.auth.uid;
    }
  }
}
