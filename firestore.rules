rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    function isAdmin() {
      return request.auth.token.role == 'admin' || request.auth.token.role == 'super_admin';
    }
    function isVerified() {
      return request.auth.token.verified == true;
    }
    function isPatient() {
        return request.auth.token.role == 'patient';
    }
    function isDoctor() {
        return request.auth.token.role == 'doctor';
    }

    // Users Collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
    }

    // Profiles Collection
    match /profiles/{userId} {
      allow read: if request.auth != null;
      allow create, update: if isOwner(userId) || isAdmin();
    }
    
    // Patients (matchmaking data)
    match /patients/{patientId} {
        allow read: if request.auth != null;
        allow write: if isOwner(patientId);
    }

    // Admin Invites
    match /adminInvites/{token} {
        allow read, write: if isAdmin();
        allow read: if request.auth == null; // For new admin signup page
    }
    
    // Consultations
    match /consultations/{consultationId} {
        allow read, write: if request.auth.uid == resource.data.patientId || request.auth.uid == resource.data.providerId;

        // Chat subcollection
        match /chat/{messageId} {
            allow read, write: if request.auth.uid == get(/databases/$(database)/documents/consultations/$(consultationId)).data.patientId || request.auth.uid == get(/databases/$(database)/documents/consultations/$(consultationId)).data.providerId;
        }
    }
    
     match /kyc_docs/{userId}/{docId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    
    match /verifications/{userId}/{historyId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin();
    }
    
    match /audits/{auditId} {
        allow read, write: if isAdmin();
    }
  }
}
